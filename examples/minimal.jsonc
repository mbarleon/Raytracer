            //     {
            //         "origin": { "x": 60, "y": 5, "z": 40 },
            //         "bottom_side": { "x": 10, "y": 20, "z": 30 },
            //         "left_side": { "x": 40, "y": 50, "z": 60 },
            //         "material": "metal"
            //     }
            // ],
            "planes": [
                {
                    "axis": "Z",
                    "position": -20,
                    "material": "metal",
                    "color": { "r": 64, "g": 64, "b": 255 }
                }
            ]
            // "cylinders": [],
            // "cones": [],
